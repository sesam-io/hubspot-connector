{
  "_id": "{{@ system @}}",
  "oauth2": {
    "access_token": "$SECRET(oauth_access_token)",
    "client_id": "$SECRET(oauth_client_id)",
    "client_secret": "$SECRET(oauth_client_secret)",
    "refresh_token": "$SECRET(oauth_refresh_token)",
    "token_url": "{{@ token_url @}}"
  },
  "operations": {
    "delete": {
      "method": "DELETE",
      "url": "crm/v3/objects/{{ properties.datatype }}/{{ entity.id }}"
    },
    "insert": {
      "method": "POST",
      "url": "crm/v3/objects/{{ properties.datatype }}"
    },
    "list": {
      "method": "GET",
      "next_page_link": "{{ body.paging.next.link }}",
      "url": "crm/v3/objects/{{ properties.datatype }}?properties={{ properties.properties }}&associations={{ properties.associations }}"
    },
    "lookup": {
      "method": "GET",
      "params": {
        "associations": "{{ properties.associations }}",
        "properties": "{{ properties.properties }}"
      },
      "url": "crm/v3/objects/{{ properties.datatype }}/{{ entity.id }}"
    },
    "update": {
      "method": "PATCH",
      "url": "crm/v3/objects/{{ properties.datatype }}/{{ entity.id }}"
    }
  },
  "type": "system:rest",
  "url_pattern": "https://api.hubapi.com/%s",
  "verify_ssl": true
}